{#
/**
 * @file
 * Aurora's theme implementation to display a single page.
 * Updated to match the screenshot layout.
 */
#}
<div class="page-wrapper">
  {# Top Banner Region - Blue Welcome Area #}
  {% if page.top_banner %}
    <div class="top-banner">
      {{ page.top_banner }}
    </div>
  {% endif %}

  {# Header with Logo and Navigation #}
  <header class="site-header">
    <div class="container" style="display: flex; justify-content: space-between; align-items: center; max-width: 1200px; margin: 0 auto; padding: 0 15px;">
      {% if page.logo %}
        <div class="logo">
          {{ page.logo }}
        </div>
      {% endif %}

      {% if page.navigation %}
        <div class="navigation">
          {{ page.navigation }}
        </div>
      {% endif %}
    </div>
  </header>

  {# Main Content Area #}
  <main class="site-main">
    <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 15px;">
      <div style="display: flex; flex-direction: column;">
        {# Left Sidebar - Shows as main content in screenshot #}
        {% if page.left_sidebar %}
          <aside class="left-sidebar">
            {{ page.left_sidebar }}
          </aside>
        {% endif %}

        {# Content Region - Below left sidebar in screenshot #}
        <div class="content">
          {{ page.content }}
        </div>
      </div>
    </div>
  </main>

  {# Footer Region #}
  {% if page.footer %}
    <footer class="site-footer">
      <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 15px;">
        {{ page.footer }}
      </div>
    </footer>
  {% endif %}
</div>
